---
// Minimal client-side and meta refresh redirect to PT
const target = "/pt/";
---
<html lang="pt">
  <head>
    <meta http-equiv="refresh" content={`0; url=${target}`} />
    <link rel="canonical" href={target} />
    <script>
      if (typeof window !== 'undefined') window.location.replace("/pt/");
    </script>
  </head>
  <body>
    <a href="/pt/">Redirecionando para /pt/â€¦</a>
  </body>
</html>
