---
import "../styles/global.css";
type Alt = { hreflang: string; href: string };
type Nav = { home: string; contact: string; switchHref: string };
const {
  lang = "pt",
  title = "Guia Japão Incrível",
  description = "",
  alternates = [] as Alt[],
  nav = { home: "/pt/", contact: "/pt/contato", switchHref: "/ja/" } as Nav
} = Astro.props as {
  lang?: string;
  title?: string;
  description?: string;
  alternates?: Alt[];
  nav?: Nav;
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{title}</title>
    {alternates.map((a: Alt) => (
      <link rel="alternate" hreflang={a.hreflang} href={a.href} />
    ))}
  </head>
  <body>
    <header class="p-4 border-b border-gray-200 flex items-center justify-between">
      <a href={nav.home} class="font-semibold">Guia Japão Incrível</a>
      <nav class="flex gap-4">
        <a href={nav.home}>Home</a>
        <a href={nav.contact}>Contato</a>
        <a href={nav.switchHref} class="underline">{lang === "pt" ? "日本語" : "Português"}</a>
      </nav>
    </header>
    <main class="p-6 max-w-3xl mx-auto">
      <slot />
    </main>
    <footer class="p-4 border-t border-gray-200 text-sm text-gray-600">
      © {new Date().getFullYear()} Guia Japão Incrível
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
